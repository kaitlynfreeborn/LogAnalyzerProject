<Window x:Class="LogAnalysis.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogAnalysis"
        mc:Ignorable="d"
        Title="login" Height="450" Width="800">
    <Grid Background="#FFEEE9FF">
        <Label x:Name="lblUsername" Content="Username:" HorizontalAlignment="Left" Margin="70,95,0,0" VerticalAlignment="Top" Width="249" FontSize="48" FontWeight="Bold" Height="75"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="85,210,0,0" VerticalAlignment="Top" Width="234" FontSize="48" FontWeight="Bold" Height="75"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="63" Margin="334,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" FontSize="36"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="590,162,0,0" VerticalAlignment="Top" Width="144" Height="66" FontSize="36" FontWeight="Bold" Click="btnLogin_Click" Background="#FFE4CCF1" BorderBrush="#FF120303"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="333,222,0,0" VerticalAlignment="Top" Height="63" BorderBrush="#FF040918" Width="174" FontSize="36"/>

    </Grid>
</Window>
