<Window x:Class="LogAnalysis.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogAnalysis"
        mc:Ignorable="d"
        Title="login" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblUsername" Content="Username:" HorizontalAlignment="Left" Margin="151,117,0,0" VerticalAlignment="Top" Width="156" FontSize="20"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="151,169,0,0" VerticalAlignment="Top" Width="156" FontSize="20"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="35" Margin="290,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="18"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="35" Margin="290,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="18"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="536,138,0,0" VerticalAlignment="Top" Width="112" Height="52" FontSize="20" FontWeight="Bold" Click="btnLogin_Click"/>

    </Grid>
</Window>
